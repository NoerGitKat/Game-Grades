		img.trumpcat(src="../img/trumpetcat.gif")
		img.pumpgirl2(src="../img/pumpgirl.gif")

		audio.audio(autoplay loop controls='')
			source(src='../audio/Feels Good.mp3', type='audio/mpeg')

		script.
			$('.audio').hide(0);

			function loopCat2() {
				$( ".cat2" ).animate({
