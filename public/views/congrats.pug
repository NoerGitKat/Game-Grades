	head
		link(rel='shortcut icon', href='../img/oldschoolcontroller2.ico', type='image/x-icon')
		title YAY! Congrats!
		link(rel="stylesheet" href="../css/congrats.css")
		script(src="../js/jquery-3.2.1.min.js")
	body
		h1 YAY! You rule, #{user.username}!!!!
		a(href="/profile") Back to profile
		img.pumpgirl1(src="../img/pumpgirl.gif")
		img.cat2(src="../img/catdance2.gif")
